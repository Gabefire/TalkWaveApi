{
    "family": "TalkWaveApiTask",
    "containerDefinitions": [
        {
            "name": "talkwaveapi",
            "image": "584742206045.dkr.ecr.us-east-2.amazonaws.com/talkwaveapi:latest",
            "cpu": 800,
            "memory": 800,
            "portMappings": [
                {
                    "name": "talkwaveapi-8080-tcp",
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp",
                    "appProtocol": "http"
                },
                {
                    "name": "postgres",
                    "containerPort": 5432,
                    "hostPort": 5432,
                    "protocol": "tcp",
                    "appProtocol": "http"
                },
                {
                    "name": "redis",
                    "containerPort": 6379,
                    "hostPort": 6379,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "CONNECTIONSTRINGS__DEFAULTCONNECTION",
                    "value": "Server=talkwave.cdgsao6goy8f.us-east-2.rds.amazonaws.com;Port=5432;Database=TalkWave;Username=postgres;password=Uq85xSNS4c4Q86kD"
                }
            ],
            "environmentFiles": [
                {
                    "value": "arn:aws:s3:::talkwave-signalr-env/.env",
                    "type": "s3"
                }
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/TalkWaveApiTask",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl --fail http://localhost:8080/health || exit 1"
                ],
                "interval": 60,
                "timeout": 10,
                "retries": 3,
                "startPeriod": 300
            },
            "systemControls": []
        }
    ],
    "taskRoleArn": "arn:aws:iam::584742206045:role/ecsTaskExecutionRole",
    "executionRoleArn": "arn:aws:iam::584742206045:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "EC2"
    ],
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}