{
    "family": "TalkWaveApiTask",
    "containerDefinitions": [
        {
            "name": "talkwaveapi",
            "image": "584742206045.dkr.ecr.us-east-2.amazonaws.com/talkwaveapi:latest",
            "cpu": 922,
            "memory": 900,
            "portMappings": [
                {
                    "name": "talkwaveapi-80-tcp",
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "JwtSettings__Authority",
                    "value": "https://TalkWaveApp.com"
                },
                {
                    "name": "ConnectionStrings__DefaultConnection",
                    "value": "Server=ip-172-31-13-253.us-east-2.compute.internal;Port=5432;Database=TalkWave;Username=gabrielunderwood;Password=GTHmkvfhwpmb4zhg"
                },
                {
                    "name": "JwtSettings__Key",
                    "value": "this is my custom Tecret key for authentication"
                }
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/TalkWaveApiTask",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            },
            "healthCheck": {
                "command": [
                    "[ \"CMD-SHELL\"",
                    "\"curl -f http://localhost/healthy || exit 1\" ]"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3
            },
            "systemControls": []
        }
    ],
    "taskRoleArn": "arn:aws:iam::584742206045:role/ecsTaskExecutionRole",
    "executionRoleArn": "arn:aws:iam::584742206045:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "EC2"
    ],
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}
